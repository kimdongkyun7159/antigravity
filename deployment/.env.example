# 프로덕션 환경 변수 예시
# 복사 후 사용: cp .env.example .env

# Flask 설정
SECRET_KEY=change-this-to-a-very-long-random-string-min-32-chars
FLASK_ENV=production
DEBUG=False

# 서버 설정
HOST=0.0.0.0
PORT=5000

# Gemini API (선택)
GEMINI_API_KEY=your_gemini_api_key_here
RAG_ENABLED=false

# 데이터베이스 (향후 확장)
# DATABASE_URL=sqlite:///data/chat_history.db

# 로깅
LOG_LEVEL=INFO

# 보안
# ALLOWED_ORIGINS=https://chat.yourdomain.com,https://yourdomain.com

# 성능
# MAX_CONNECTIONS=100
# WORKER_TIMEOUT=60
